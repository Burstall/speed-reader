{
  "manifest_version": 3,
  "name": "Speed Reader Cookie Capture",
  "version": "1.0.0",
  "description": "Capture premium service cookies for Speed Reader app",
  "permissions": [
    "cookies",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.substack.com/*",
    "https://*.ft.com/*",
    "https://*.spectator.co.uk/*",
    "https://*.economist.com/*",
    "https://*.nytimes.com/*",
    "https://*.wsj.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
